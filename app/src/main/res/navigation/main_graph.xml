<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_graph"
    app:startDestination="@id/listPiFragment">

    <fragment
        android:id="@+id/cityMapFragment"
        android:name="com.example.tfg_proyectomadrid.view.maps.CityMapFragment"
        android:label="fragment_city_map"
        tools:layout="@layout/fragment_city_map">
        <action
            android:id="@+id/action_cityMapFragment_to_detailPiFragment"
            app:destination="@id/detailPiFragment" />
    </fragment>
    <fragment
        android:id="@+id/collectablesFragment"
        android:name="com.example.tfg_proyectomadrid.view.collectables.CollectablesFragment"
        android:label="fragment_collectables"
        tools:layout="@layout/fragment_collectables" />
    <fragment
        android:id="@+id/listPiFragment"
        android:name="com.example.tfg_proyectomadrid.view.list_pi.ListPiFragment"
        android:label="fragment_list_pi"
        tools:layout="@layout/fragment_list_pi">

        <action
            android:id="@+id/action_listPiFragment_to_detailPiFragment"
            app:destination="@id/detailPiFragment"
            app:enterAnim="@animator/nav_default_enter_anim"
            app:exitAnim="@animator/nav_default_exit_anim"
            app:popEnterAnim="@animator/nav_default_pop_enter_anim"
            app:popExitAnim="@animator/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/detailPiFragment"
        android:name="com.example.tfg_proyectomadrid.view.list_pi.DetailPiFragment"
        android:label="fragment_detail_pi"
        tools:layout="@layout/fragment_detail_pi">
        <argument
            android:name="pointOfInterestId"
            app:argType="integer" />
    </fragment>
</navigation>