<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <!-- Imagen -->
    <ImageView
        android:id="@+id/bubble_image"
        android:layout_width="108dp"
        android:layout_height="160dp"
        android:contentDescription="@string/point_of_interest_picture"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="@color/gray" />

    <!-- Título -->
    <TextView
        android:id="@+id/bubble_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintStart_toEndOf="@id/bubble_image"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Título del POI" />

    <!-- Descripción -->
    <TextView
        android:id="@+id/bubble_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:visibility="visible"
        app:layout_constraintStart_toEndOf="@id/bubble_image"
        app:layout_constraintTop_toBottomOf="@id/bubble_title"
        tools:text="Descripción del POI" />

    <!-- Subdescripción (Necesario para MarkerInfoWindow)-->
    <TextView
        android:id="@+id/bubble_subdescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray"
        android:textSize="12sp"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@id/bubble_image"
        app:layout_constraintTop_toBottomOf="@id/bubble_description"
        tools:text="Subdescripción del POI" />

    <!-- Botón 1 -->
    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        app:layout_constraintEnd_toStartOf="@id/button2"
        app:layout_constraintStart_toEndOf="@id/bubble_image"
        app:layout_constraintTop_toBottomOf="@id/bubble_subdescription"
        tools:text="Presencial" />

    <!-- Botón 2 -->
    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/button1"
        app:layout_constraintTop_toBottomOf="@id/bubble_subdescription"
        tools:text="Remoto" />


</androidx.constraintlayout.widget.ConstraintLayout>