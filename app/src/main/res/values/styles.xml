<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomBottomNavActiveIndicator" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemActiveIndicatorStyle">@style/CustomActiveIndicator</item>
    </style>

    <style name="CustomActiveIndicator">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="CustomBottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconSize">36dp</item> <!-- Ajusta el tamaño según tus necesidades -->
        <item name="itemTextAppearanceActive">@style/BottomNavigationView.Active</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavigationView.Inactive</item>
    </style>

    <style name="BottomNavigationView.Active" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="BottomNavigationView.Inactive" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">12sp</item>
    </style>

</resources>